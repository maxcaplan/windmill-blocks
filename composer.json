{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "windmill/windmill-blocks",
  "description": "Extensible WordPress theme blocks for developers and designers",
  "version": "0.1.0",
  "type": "wordpress-plugin",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Max Caplan",
      "email": "contact@maxcaplan.com"
    }
  ],
  "scripts": {
    "makepot": "wp i18n make-pot ."
  },
  "require": {
    "php": "8.3.*",
    "composer/installers": "^2.3"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "squizlabs/php_codesniffer": true,
      "wp-coding-standards/wpcs": true
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^3.3",
    "php-stubs/wordpress-stubs": "^6.9"
  }
}
